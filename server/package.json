{
  "name": "behance-graphql-api",
  "version": "0.1.0",
  "description": "A GraphQL server that wraps the Behance API",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./src/** ./tests/**",
    "pretest": "npm run lint",
    "test": "mocha -r babel-core/register -r ./tests/framework.js --exit './tests/**/*.spec.js'",
    "clean": "rimraf dist && mkdir -p ./dist",
    "babel": "babel ./src -s -q -D -d ./dist",
    "babel:watch": "babel ./src -s -D -d ./dist --watch",
    "watch": "npm-run-all clean babel:watch",
    "build": "npm-run-all clean babel",
    "serve": "DEBUG=app:* NODE_ENV=development node ./dist/index.js",
    "start": "npm-run-all build serve"
  },
  "keywords": [],
  "author": "Philip Damra",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^9.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "dotenv": "^6.0.0",
    "eslint": "^5.5.0",
    "eslint-config-google": "^0.10.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "proxyquire": "^2.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^6.3.1",
    "sinon-chai": "^3.2.0"
  },
  "dependencies": {
    "apollo-server": "^2.0.7",
    "apollo-server-express": "^2.0.6",
    "axios": "^0.18.0",
    "chalk": "^2.4.1",
    "cors": "^2.8.4",
    "debug": "^4.0.1",
    "express": "^4.16.3",
    "graphql": "^14.0.2",
    "graphql-resolvers": "^0.2.2",
    "ip": "^1.1.5"
  }
}
